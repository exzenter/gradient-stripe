{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "gsb/gradient-stripe",
    "version": "1.0.0",
    "title": "Gradient Stripe",
    "category": "design",
    "icon": "art",
    "description": "A beautiful animated mesh gradient stripe inspired by Stripe's design.",
    "supports": {
        "html": false,
        "align": ["wide", "full"]
    },
    "textdomain": "gradient-stripe-block",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": "file:./frontend.js",
    "attributes": {
        "color1": { "type": "string", "default": "#1dcb5d" },
        "alpha1": { "type": "number", "default": 1 },
        "color2": { "type": "string", "default": "#ffe85e" },
        "alpha2": { "type": "number", "default": 1 },
        "color3": { "type": "string", "default": "#ffa832" },
        "alpha3": { "type": "number", "default": 1 },
        "color4": { "type": "string", "default": "#ffce48" },
        "alpha4": { "type": "number", "default": 1 },
        "animationSpeed": { "type": "number", "default": 1 },
        "stripeAngle": { "type": "number", "default": -12 },
        "stripeHeight": { "type": "number", "default": 250 },
        "noiseScale": { "type": "number", "default": 1 },
        "turbulence": { "type": "number", "default": 0.7 },
        "octaves": { "type": "number", "default": 3 },
        "lacunarity": { "type": "number", "default": 2 },
        "meshIntensity": { "type": "number", "default": 0.3 },
        "colorBlendMode": { "type": "number", "default": 0 },
        "blendStrength": { "type": "number", "default": 1 },
        "blur": { "type": "number", "default": 0 },
        "importExportJson": { "type": "string", "default": "" }
    }
}
