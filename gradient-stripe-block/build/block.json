{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "gsb/gradient-stripe",
  "version": "1.1.0",
  "title": "Gradient Stripe",
  "category": "design",
  "icon": "art",
  "description": "A container block with animated mesh gradient background inspired by Stripe's design.",
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "anchor": true,
    "className": true,
    "color": {
      "text": true,
      "link": true,
      "background": false
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "blockGap": true
    },
    "dimensions": {
      "minHeight": true
    },
    "layout": {
      "default": {
        "type": "constrained"
      },
      "allowEditing": true,
      "allowSizingOnChildren": true
    },
    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true
    },
    "position": {
      "sticky": true
    }
  },
  "textdomain": "gradient-stripe-block",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./frontend.js",
  "attributes": {
    "stripeMode": {
      "type": "boolean",
      "default": false
    },
    "stripeOverflow": {
      "type": "boolean",
      "default": false
    },
    "minHeight": {
      "type": "string",
      "default": ""
    },
    "color1": {
      "type": "string",
      "default": "#1dcb5d"
    },
    "color2": {
      "type": "string",
      "default": "#ffe85e"
    },
    "color3": {
      "type": "string",
      "default": "#ffa832"
    },
    "color4": {
      "type": "string",
      "default": "#ffce48"
    },
    "animationSpeed": {
      "type": "number",
      "default": 1
    },
    "stripeAngle": {
      "type": "number",
      "default": -12
    },
    "stripeHeight": {
      "type": "number",
      "default": 250
    },
    "stripeTranslateX": {
      "type": "number",
      "default": 0
    },
    "stripeTranslateY": {
      "type": "number",
      "default": 0
    },
    "noiseScale": {
      "type": "number",
      "default": 1
    },
    "turbulence": {
      "type": "number",
      "default": 0.7
    },
    "octaves": {
      "type": "number",
      "default": 3
    },
    "lacunarity": {
      "type": "number",
      "default": 2
    },
    "meshIntensity": {
      "type": "number",
      "default": 0.3
    },
    "colorBlendMode": {
      "type": "number",
      "default": 0
    },
    "blendStrength": {
      "type": "number",
      "default": 1
    },
    "blur": {
      "type": "number",
      "default": 0
    },
    "blurIsolation": {
      "type": "boolean",
      "default": false
    },
    "ignoreGlobalPadding": {
      "type": "boolean",
      "default": true
    },
    "importExportJson": {
      "type": "string",
      "default": ""
    },
    "tagName": {
      "type": "string",
      "default": "div"
    }
  }
}